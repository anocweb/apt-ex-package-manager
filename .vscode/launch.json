{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Apt-Ex Package Manager",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Apt-Ex Package Manager (Show UI outlines)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "args": ["--dev-outline"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Apt-Ex Package Manager (Show Logger)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "args": ["--dev-logging", "--stdout-log-level=ERROR"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Apt-Ex Package Manager (Show Logger & console logs)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "args": ["--dev-logging", "--stdout-log-level=DEBUG"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}